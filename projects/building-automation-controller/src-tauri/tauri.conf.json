{
  "build": {
    "beforeDevCommand": "",
    "beforeBuildCommand": "",
    "devPath": "../src",
    "distDir": "../src",
    "withGlobalTauri": false
  },
  "package": {
    "productName": "Building Automation Controller",
    "version": "1.0.0"
  },
  "tauri": {
    "allowlist": {
      "all": false,
      "shell": {
        "all": false,
        "open": true,
        "execute": true,
        "sidecar": true,
        "scope": [
          {
            "name": "python3",
            "cmd": "python3",
            "args": true
          },
          {
            "name": "node",
            "cmd": "node",
            "args": true
          }
        ]
      },
      "fs": {
        "all": true,
        "scope": [
          "$CONFIG/*",
          "$CONFIG/**"
        ]
      }
    },
    "bundle": {
      "active": true,
      "targets": "all",
      "identifier": "com.automatacontrols.building-automation",
      "icon": []
    },
    "security": {
      "csp": null
    },
    "windows": [
      {
        "title": "Building Automation Controller",
        "width": 1600,
        "height": 1000,
        "minWidth": 1200,
        "minHeight": 800
      }
    ]
  }
}